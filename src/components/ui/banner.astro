---
interface Props {
  wide?: boolean;
  class?: string;
  fl: string;
  sl?: string;
  btntext:string;
  btnlink:string;
  [x: string]: any;
}


const {
  size = "both",
  wide=false,
  btntext='WatsApp Now',
  class: className,
  btnlink='#',
  fl = "Looking for BEST PG ?",
  sl = "GET HOTEL LIKE PG.",
  ...rest
} = Astro.props;

---

<div
  {...rest}
  class:list={[
    "rounded text-center gap-4 md:p-10 px-3 py-3 w-full bg-[#0943A0] transition  justify-around flex-col md:flex-row flex items-center focus-visible:ring-2 ring-offset-2 ring-gray-200",
    !wide && "md:h-56 h-36",
    className,
  ]}
>
  <div class="md:text-2xl text-lg flex-col flex font-bold break-words">

    <div class="">
        {fl}
      </div>
    <div class="">
        {sl}
      </div>
  </div>
  <a
  href={btnlink}
    class="bg-[#F4C024] flex no-underline justify-center items-center font-semibold md:p-2.5 px-1 py-1 rounded-lg w-40 text-black"
  >
    {btntext}
  </a>
</div>
